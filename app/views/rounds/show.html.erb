<% if session[:creator] %>
<div class="link-container">
  <div id="game-key" data-round-id="<%= @round.id %>">
    <p>Game Link: <span id='link'><%= @round.vote_url[0..-5] %><span id="game-id"><%= @round.vote_url[-4..-1] %></span></p></span>
    <button onclick="copyToClipboard('#link')">Copy Link</button>
  </div>
<% end %>
</div>

<div id='container' data-round-id="<%= @round.id %>">

<%= render "restaurants_list" %>
  <div id="secret" data-round-id="<%= @round.id %>"></div>

  <div class="names-container">
    <ul id="users-ul">
     <% @round.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
    </ul>
  </div>

</div>

<div id="round-results-btn" data-round-id="<%= @round.id %>">

  <% if session[:creator] %>
    <%= link_to 'Results', "/rounds/#{@round.id}/results", id: 'results-link' %>
  <% end %>
</div>
