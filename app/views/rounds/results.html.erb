<h1 class="center" id="winner-title">Winner!!</h1>

<div class="results-container">

  <div class="center results">
    <div class="hvr-grow-shadow" id="winner-name"><%= @winner.name %></div>
    <div class="hvr-underline-from-center" id="winner-address"> Located at: <%= @winner.address %></div>
    <div id="winner-website"><%= link_to "Info", "http://www.google.com#q=#{@winner.name.split.join('+')}" %></div>
  </div>

</div>

