<div class="center game-instruction">
  <p>Welcome XXXX either create a new game or join a game by entering the game key.</p>
</div>




<div class="form-container">
  <div class="create-form">
  <%= form_tag rounds_path, method: :post, id: :'start-form' do |f| %>
    <%= label_tag "Name:" %>
    <%= text_field_tag :name %>
    <%= text_field_tag :street %>
    <%= text_field_tag :city %>
    <%= text_field_tag :state %>
    <%= submit_tag "Create Your Game",  :class => "submit-button" %>
  <% end %>
  </div>
  <div class="options">
    <p> <-- Create or Join --> </p>
  </div>
  <div class="join-form">
  <%= form_tag find_key_path, method: :get do %>
    <%= label_tag "Name:", nil, :class => "name-label" %>
    <%= text_field_tag :name %>
    <p>
    <%= label_tag "Key:", nil, :class => "key-label" %>
    <%= text_field_tag :key %>
   </p>
    <%= submit_tag 'Submit', :class => "submit-button" %>
  <% end %>
  </div>
</div>
